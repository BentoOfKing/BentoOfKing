<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cce.nkfust.tw.bentoofking.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="店家資訊"
        />

    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- The navigation drawer -->

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button11"
                android:layout_width="72dp"
                android:layout_height="0dp"
                android:layout_marginEnd="80dp"
                android:background="@drawable/rectanglebox"
                android:text="取消"
                app:layout_constraintBottom_toBottomOf="@+id/button13"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/button13" />

            <Button
                android:id="@+id/button13"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectanglebox"
                android:text="修改"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/commentEditText4" />

            <Button
                android:id="@+id/button6"
                android:layout_width="87dp"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:text="重設密碼"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/button3"
                app:layout_constraintStart_toEndOf="@+id/button3"
                app:layout_constraintTop_toTopOf="@+id/button3" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="10dp"
                android:text="bandonofking@gmail.com"
                app:layout_constraintBottom_toBottomOf="@+id/textView212"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView212"
                app:layout_constraintTop_toTopOf="@+id/textView212" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="10dp"
                android:text="******"
                app:layout_constraintBottom_toBottomOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="@+id/textView3"
                app:layout_constraintVertical_bias="1.0" />

            <EditText
                android:id="@+id/commentEditText4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:inputType="text"
                android:selectAllOnFocus="true"
                android:singleLine="false"
                android:text="電通肥宅"
                android:textAllCaps="false"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView9"
                app:layout_constraintEnd_toEndOf="@+id/radioButton4"
                app:layout_constraintStart_toStartOf="@+id/radioButton3"
                app:layout_constraintTop_toTopOf="@+id/textView9" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:adjustViewBounds="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:color/holo_orange_dark" />

            <TextView
                android:id="@+id/textView212"
                android:layout_width="41dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Email :"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="@+id/imageView2" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="密碼 :"
                app:layout_constraintBottom_toTopOf="@+id/button3"
                app:layout_constraintStart_toStartOf="@+id/textView212"
                app:layout_constraintTop_toBottomOf="@+id/textView212" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="10dp"
                android:text="******"
                app:layout_constraintBottom_toBottomOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="@+id/textView3" />

            <Button
                android:id="@+id/button3"
                android:layout_width="87dp"
                android:layout_height="35dp"
                android:text="更改信箱"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintStart_toStartOf="@+id/textView212" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="31dp"
                android:layout_height="18dp"
                android:layout_marginTop="20dp"
                android:text="性別"
                app:layout_constraintStart_toStartOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="暱稱"
                app:layout_constraintStart_toStartOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="54dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:checked="true"
                android:text="男"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView8"
                app:layout_constraintStart_toEndOf="@+id/textView8" />

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="54dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:checked="false"
                android:duplicateParentState="false"
                android:text="女"
                android:textSize="14sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/radioButton3"
                app:layout_constraintStart_toEndOf="@+id/radioButton3" />

        </android.support.constraint.ConstraintLayout>

        <ListView
            android:id="@+id/drawerListView"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#111"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp" />
    </android.support.v4.widget.DrawerLayout>


</LinearLayout>
