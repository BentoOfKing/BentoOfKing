<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/border"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/comment_item_selector"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/commentDate2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text=" - "
        android:textColor="#59493f"
        app:layout_constraintBottom_toBottomOf="@+id/storeReply"
        app:layout_constraintEnd_toStartOf="@+id/commentDate"
        app:layout_constraintTop_toTopOf="@+id/storeReply"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/commentText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:text="評論內容........."
        android:textColor="#59493f"
        app:layout_constraintBottom_toBottomOf="@+id/ScoreTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/colon"
        app:layout_constraintTop_toTopOf="@+id/ScoreTextView" />

    <TextView
        android:id="@+id/replyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="店家回覆 : "
        android:textColor="#59493f"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commentMember" />

    <TextView
        android:id="@+id/storeReply"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="#59493f"
        app:layout_constraintBottom_toBottomOf="@+id/replyTitle"
        app:layout_constraintEnd_toStartOf="@+id/commentDate2"
        app:layout_constraintStart_toEndOf="@+id/replyTitle"
        app:layout_constraintTop_toTopOf="@+id/replyTitle" />

    <TextView
        android:id="@+id/commentMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="評論人"
        android:textColor="#59493f"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/commentDate"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="2018/03/10"
        android:textColor="#59493f"
        app:layout_constraintBottom_toBottomOf="@+id/storeReply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/storeReply" />

    <TextView
        android:id="@+id/colon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:text=":"
        android:textColor="#59493f"
        app:layout_constraintBottom_toBottomOf="@+id/ScoreTextView"
        app:layout_constraintStart_toEndOf="@+id/ScoreTextView"
        app:layout_constraintTop_toTopOf="@+id/ScoreTextView" />

    <TextView
        android:id="@+id/ScoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:text="(☆☆☆☆☆)"
        android:textColor="#59493f"
        app:layout_constraintBottom_toBottomOf="@+id/commentMember"
        app:layout_constraintStart_toEndOf="@+id/commentMember"
        app:layout_constraintTop_toTopOf="@+id/commentMember" />

</android.support.constraint.ConstraintLayout>