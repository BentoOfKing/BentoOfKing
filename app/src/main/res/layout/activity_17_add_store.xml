<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cce.nkfust.tw.bentoofking.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="新增店家" />

    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- The navigation drawer -->

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView27"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_marginTop="20dp"
                android:text="停車資訊"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="@+id/textView26"
                app:layout_constraintTop_toBottomOf="@+id/textView26" />

            <EditText
                android:id="@+id/editText9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:ems="10"
                android:hint="請填寫附近停車相關資訊"
                android:inputType="text"
                app:layout_constraintBottom_toBottomOf="@+id/textView27"
                app:layout_constraintEnd_toEndOf="@+id/editText7"
                app:layout_constraintStart_toStartOf="@+id/editText7"
                app:layout_constraintTop_toTopOf="@+id/textView27" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="80dp"
                android:layout_height="24dp"
                android:layout_marginTop="20dp"
                android:text="店家Email"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <EditText
                android:id="@+id/editText8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:hint="請填寫貴店地址"
                android:inputType="text"
                app:layout_constraintBottom_toBottomOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="@+id/editText2"
                app:layout_constraintStart_toStartOf="@+id/editText2"
                app:layout_constraintTop_toTopOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="75dp"
                android:layout_height="24dp"
                android:layout_marginTop="20dp"
                android:text="店內資訊"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/textView27"
                app:layout_constraintTop_toBottomOf="@+id/textView27" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_marginTop="20dp"
                android:text="店家地址"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/textView212"
                app:layout_constraintStart_toStartOf="@+id/textView212"
                app:layout_constraintTop_toBottomOf="@+id/textView212" />

            <EditText
                android:id="@+id/editText7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:hint="請填寫貴店電子郵件"
                android:inputType="text"
                app:layout_constraintBottom_toBottomOf="@+id/textView26"
                app:layout_constraintEnd_toEndOf="@+id/editText8"
                app:layout_constraintStart_toStartOf="@+id/editText8"
                app:layout_constraintTop_toTopOf="@+id/textView26" />

            <TextView
                android:id="@+id/textView212"
                android:layout_width="75dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:text="店家名稱"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="15dp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:hint="請填寫貴店大名"
                android:inputType="text"
                app:layout_constraintBottom_toBottomOf="@+id/textView212"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView212"
                app:layout_constraintTop_toTopOf="@+id/textView212" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="96dp"
                android:layout_height="27dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="免費飲料"
                app:layout_constraintStart_toStartOf="@+id/constraintLayout"
                app:layout_constraintTop_toTopOf="@+id/constraintLayout" />

            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="0dp"
                android:layout_height="27dp"
                android:layout_marginTop="10dp"
                android:text="免費湯品"
                app:layout_constraintEnd_toEndOf="@+id/checkBox"
                app:layout_constraintStart_toStartOf="@+id/checkBox"
                app:layout_constraintTop_toBottomOf="@+id/checkBox" />

            <CheckBox
                android:id="@+id/checkBox5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="店員超正"
                app:layout_constraintBottom_toBottomOf="@+id/checkBox4"
                app:layout_constraintEnd_toEndOf="@+id/checkBox3"
                app:layout_constraintStart_toStartOf="@+id/checkBox3"
                app:layout_constraintTop_toTopOf="@+id/checkBox4" />

            <CheckBox
                android:id="@+id/checkBox6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="便宜滷味"
                app:layout_constraintBottom_toBottomOf="@+id/checkBox5"
                app:layout_constraintEnd_toEndOf="@+id/checkBox2"
                app:layout_constraintStart_toStartOf="@+id/checkBox2"
                app:layout_constraintTop_toTopOf="@+id/checkBox5" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="96dp"
                android:layout_height="0dp"
                android:layout_marginEnd="10dp"
                android:text="免費加飯"
                app:layout_constraintBottom_toBottomOf="@+id/checkBox"
                app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
                app:layout_constraintTop_toTopOf="@+id/checkBox" />

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="96dp"
                android:layout_height="0dp"
                android:text="冷氣開放"
                app:layout_constraintBottom_toBottomOf="@+id/checkBox"
                app:layout_constraintEnd_toStartOf="@+id/checkBox2"
                app:layout_constraintStart_toEndOf="@+id/checkBox"
                app:layout_constraintTop_toTopOf="@+id/checkBox"
                app:layout_constraintVertical_bias="0.0" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/roundbox"
                app:layout_constraintEnd_toEndOf="@+id/editText9"
                app:layout_constraintStart_toStartOf="@+id/textView23"
                app:layout_constraintTop_toBottomOf="@+id/textView23">

            </android.support.constraint.ConstraintLayout>

            <Button
                android:id="@+id/button2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectanglebox"
                android:text="下一步"
                app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
                app:layout_constraintHorizontal_bias="0.2"
                app:layout_constraintStart_toStartOf="@+id/constraintLayout"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

            <Button
                android:id="@+id/button12"
                android:layout_width="72dp"
                android:layout_height="0dp"
                android:background="@drawable/rectanglebox"
                android:text="取消"
                app:layout_constraintBottom_toBottomOf="@+id/button2"
                app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
                app:layout_constraintHorizontal_bias="0.8"
                app:layout_constraintStart_toStartOf="@+id/constraintLayout"
                app:layout_constraintTop_toTopOf="@+id/button2" />

        </android.support.constraint.ConstraintLayout>

        <ListView
            android:id="@+id/drawerListView"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#111"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp" />
    </android.support.v4.widget.DrawerLayout>


</LinearLayout>
