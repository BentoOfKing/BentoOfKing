<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cce.nkfust.tw.bentoofking.EditStoreActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fc9c46"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="編輯店家"
        />

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- The main content view -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f5c59a">

            <RelativeLayout
                android:id="@+id/content_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="18dp"
                android:paddingEnd="18dp"
                android:paddingStart="18dp"
                android:paddingTop="18dp">

                <TableLayout
                    android:id="@+id/tableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    ////////////////////////////////////////////////////

                    //////////////////////////////////////////////////////////////

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/passwordTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/password"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/font_size" />

                        <EditText
                            android:id="@+id/passwordEditText"
                            android:layout_width="0dp"
                            android:layout_height="29dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_weight="3"
                            android:background="@drawable/text_background"
                            android:ems="10"
                            android:hint="欲修改資料請填寫密碼"
                            android:inputType="textPassword"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:textColor="#59493f" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/NewPasswordTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/NewPassword"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/font_size" />

                        <EditText
                            android:id="@+id/NewPasswordEditText"
                            android:layout_width="0dp"
                            android:layout_height="29dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_weight="3"
                            android:background="@drawable/text_background"
                            android:ems="10"
                            android:hint="若無需修改密碼請留白"
                            android:inputType="textPassword"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:textColor="#59493f" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/passwordCheckTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/passwordCheck"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/font_size" />

                        <EditText
                            android:id="@+id/passwordCheckEditText"
                            android:layout_width="0dp"
                            android:layout_height="29dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_weight="3"
                            android:background="@drawable/text_background"
                            android:ems="10"
                            android:hint="若無需修改密碼請留白"
                            android:inputType="textPassword"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:textColor="#59493f" />
                    </TableRow>
                    //////////////////////////////////////////

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/storeNameTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/storeName"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/font_size" />

                        <EditText
                            android:id="@+id/nameEditText"
                            android:layout_width="0dp"
                            android:layout_height="29dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_weight="3"
                            android:background="@drawable/text_background"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:textColor="#59493f" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/AddressTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/storeAddress"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/font_size" />

                        <EditText
                            android:id="@+id/addressEditText"
                            android:layout_width="0dp"
                            android:layout_height="29dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_weight="3"
                            android:background="@drawable/text_background"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:textColor="#59493f" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/phoneTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/phone"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/font_size" />

                        <EditText
                            android:id="@+id/phoneEditText"
                            android:layout_width="0dp"
                            android:layout_height="29dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_weight="3"
                            android:background="@drawable/text_background"
                            android:ems="10"
                            android:inputType="phone"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:textColor="#59493f" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/timeTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/bussinessTime"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/font_size" />

                        <EditText
                            android:id="@+id/time1EditText"
                            android:layout_width="0dp"
                            android:layout_height="29dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1.3"
                            android:background="#FFFFFF"
                            android:ems="10"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:inputType="none"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:textAlignment="center"
                            android:textColor="#59493f" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:text="~"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/time2EditText"
                            android:layout_width="0dp"
                            android:layout_height="29dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1.3"
                            android:background="#FFFFFF"
                            android:ems="10"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:inputType="none"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:textAlignment="center"
                            android:textColor="#59493f" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/nullTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center" />

                        <EditText
                            android:id="@+id/time3EditText"
                            android:layout_width="0dp"
                            android:layout_height="29dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1.3"
                            android:background="#FFFFFF"
                            android:ems="10"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:inputType="none"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:textAlignment="center"
                            android:textColor="#59493f" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:text="~"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/time4EditText"
                            android:layout_width="0dp"
                            android:layout_height="29dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1.3"
                            android:background="#FFFFFF"
                            android:ems="10"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:inputType="none"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:textAlignment="center"
                            android:textColor="#59493f" />

                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/weekTextViewText"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="每週營業"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/font_size" />

                        <TextView
                            android:id="@+id/weekTextView"
                            android:layout_width="0dp"
                            android:layout_height="29dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_weight="3"
                            android:background="@drawable/text_background"
                            android:ems="10"
                            android:inputType="phone"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:text="@string/touchToEdit"
                            android:textAlignment="center"
                            android:textColor="#59493f"
                            android:textSize="18sp" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/infoTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/storeInfo"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/font_size" />

                        <TextView
                            android:id="@+id/infoContentTextView"
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:text="@string/touchToEdit"
                            android:textColor="@color/wallet_link_text_light"
                            android:textSize="@dimen/font_size"
                            android:textStyle="italic" />

                    </TableRow>

                </TableLayout>

                <ImageButton
                    android:id="@+id/completeButton"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_below="@+id/tableLayout"
                    android:layout_marginTop="8dp"
                    android:background="#00FFFFFF"
                    android:padding="5dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/nextstep" />


            </RelativeLayout>
        </ScrollView>

        <!-- The navigation drawer -->
        <ListView
            android:id="@+id/drawerListView"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@drawable/drawlayout_background"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp">

        </ListView>
    </android.support.v4.widget.DrawerLayout>


</LinearLayout>
